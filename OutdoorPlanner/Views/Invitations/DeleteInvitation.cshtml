@model OutdoorPlanner.ViewModels.InvitationViewModel

@{
    ViewData["Title"] = "DeleteInvitation";
}

<h3>Are you sure you want to delete this invitation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
    </dl>
    
    <form asp-action="DeleteInvitationById">
        <input type="hidden" asp-for="EventId" />
        <input type="hidden" asp-for="InvitationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ShowEventInvitations" asp-route-eventId="@Model.EventId">Back to List</a>
    </form>
</div>
