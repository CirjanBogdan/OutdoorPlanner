@model OutdoorPlanner.ViewModels.CommentCreateBindingModel

@{
    ViewData["Title"] = "EditComment";
}

<h1>Edit Comment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" value="@Model.PostId" />
            <input type="hidden" asp-for="Author" value="@Model.Author" />
            
            <div class="form-group">
                <label asp-for="Content" class="control-label">Comment</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowPostComments" asp-route-postId="@Model.PostId">Back to List</a>
</div>

